# Environment Configuration Template
# Copy this file to .env and fill in the values

# API Configuration
# IMPORTANT: Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=your-secret-key-here-change-this-in-production
API_ENVIRONMENT=development  # Set to 'production' for production deployment

# Authentication - Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO

# Model Configuration
MODEL_VERSION=1.0.0

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# AWS Configuration (if deploying to AWS)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Security
DATA_ANONYMIZATION=false
ENCRYPTION_ENABLED=false
